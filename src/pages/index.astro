---
import BaseLayout from '../layouts/BaseLayout.astro';
import InteractiveCardSection from '../components/InteractiveCardSection';
import { loadAllLanguages } from '../data/languageLoader';

const allLanguages = await loadAllLanguages();
const totalLanguages = allLanguages.length;
---

<BaseLayout count={totalLanguages}>
  <InteractiveCardSection
    client:visible
    languages={allLanguages}
  />
</BaseLayout>
