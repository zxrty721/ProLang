---
import BaseLayout from '../layouts/BaseLayout.astro';
import InteractiveLanguageList from '../components/InteractiveCardSection';
import { loadAllLanguages } from '../data/languageLoader';

const allLanguages = loadAllLanguages();
const totalLanguages = allLanguages.length;
---

<BaseLayout count={totalLanguages}>
